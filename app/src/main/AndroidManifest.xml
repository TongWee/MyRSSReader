<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myrssreader">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".RSSReaderApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_rssreader"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.Main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Article.ArticleActivity"
            android:label = "@string/activity_article"
            />
        <activity
            android:name=".ui.Suggestion.SuggestionActivity"
            android:label="@string/activity_suggestion"/>

        <activity
            android:name=".ui.Detail.DetailActivity"
            android:label="@string/activity_detail"/>

        <activity
            android:name=".ui.Help.HelpActivity"
            android:label="@string/activity_help"
            />
        <activity
            android:name=".ui.Setting.SettingActivity"
            android:label="@string/activity_setting"
            />
    </application>

</manifest>
